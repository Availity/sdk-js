{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "version": "independent",
  "packages": ["packages/*", "docusaurus"],
  "message": "chore: publish release [skip ci]",
  "command": {
    "publish": {
      "conventionalCommits": true,
      "allowBranch": ["master", "feature/*"],
      "verifyAccess": false
    },
    "diff": {
      "ignoreChanges": ["**/*.test.js", "**/*.md", "**/package-lock.json", "**/yarn.lock"]
    }
  },
  "ignoreChanges": ["**/*.test.js", "**/*.md", "**/package-lock.json", "**/yarn.lock"]
}
